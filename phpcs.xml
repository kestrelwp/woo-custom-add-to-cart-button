<?xml version="1.0"?>
<ruleset name="Kestrel PHP Coding Standards">
	<description>Kestrel Plugin Codesniffer configuration</description>

	<!-- This file is shared across projects that use the Owl dev dependency to manage PHPCS and kept in sync, see https://github.com/kestrelwp/owl -->

	<file>.</file>

	<exclude-pattern>*/assets/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>*/classes/*</exclude-pattern>
	<exclude-pattern>*/client/*</exclude-pattern>
	<exclude-pattern>*/dependencies/*</exclude-pattern>
	<exclude-pattern>*/legacy/*</exclude-pattern>
	<exclude-pattern>*/libraries/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/vendor-scoped/*</exclude-pattern>
	<exclude-pattern>*/woo-includes/*</exclude-pattern>

	<rule ref="Kestrel_PHP" />

</ruleset>